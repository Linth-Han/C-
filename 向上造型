#include"iostream"
using namespace std;
class A
{
public:
    int i;
    A():i(10) {}
};
class B:public A
{
private:
    int j=30;
public:
    B():j(30) {}
public:
    void f()
    {
        cout<<"B.j="<<j<<endl;
    }
};
int main()
{
    A a;
    B b;
    cout<<a.i<<" "<<b.i<<endl;
    cout<<sizeof(a)<<" "<<sizeof(b)<<endl;
    int *p = (int *)&a;//将变量a的地址强制转化为int*类型并赋值给指针变量p
    cout<<p<<" "<<*p<<endl;//p实际指向了a.i的内存位置
    *p=20;//修改了a.i的值
    cout<<a.i<<endl;
    p=(int*)&b;
    cout<<p<<" "<<*p<<endl;//此时指向b.i
    p++;//将指针p向后移动一个int的大小,此时指向b.j
    cout<<*p<<endl;//得到30
    *p=50;//b.j变为50
    b.f();
    cout<<a.i<<endl;//前面被修改为20
    system("pause");
    return 0;
}
